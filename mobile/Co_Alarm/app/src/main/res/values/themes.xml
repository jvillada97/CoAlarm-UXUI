<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.Co_Alarm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/moradoPrincipal</item>
        <item name="colorPrimaryVariant">@color/morado80</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/rosadoPrincipal</item>
        <item name="colorSecondaryVariant">@color/rosadomenos40</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/rojoPrincipal</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/negroPrincipal</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/negroPrincipal</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.Material3.Light.Dialog">
        <item name="android:background">@color/blancoCoalarm</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:focusable">auto</item>
        <item name="colorAccent">@color/moradoPrincipal</item>
        <item name="android:datePickerMode">calendar</item>
    </style>
    <style name="Theme.Co_Alarm" parent="Base.Theme.Co_Alarm" />
</resources>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado cuando el checkbox está marcado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="12dp"/> <!-- Radio de las esquinas -->
            <stroke android:width="2dp" android:color="@color/moradoPrincipal"/> <!-- Borde -->
        </shape>
    </item>

    <!-- Estado cuando el checkbox está desmarcado -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Fondo transparente -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/white"/> <!-- Borde blanco -->
        </shape>
    </item>

</selector>
